<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumne.exam2mobils.MainActivity"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:id="@+id/textViewTextoAltura"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAltura"
        android:layout_alignTop="@+id/textViewTextoAltura"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:id="@+id/textViewTextoPeso"
        android:layout_marginTop="53dp"
        android:textSize="20sp"
        android:layout_below="@+id/textViewTextoAltura"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPeso"
        android:layout_alignTop="@+id/textViewTextoPeso"
        android:layout_alignEnd="@+id/editTextAltura"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad"
        android:id="@+id/textViewTextoEdad"
        android:layout_below="@+id/textViewTextoPeso"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEdad"
        android:layout_alignTop="@+id/textViewTextoEdad"
        android:layout_alignEnd="@+id/editTextPeso"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewR"
        android:layout_below="@+id/editTextEdad"
        android:layout_toEndOf="@+id/textViewTextoAltura"
        android:layout_marginTop="72dp" />


</RelativeLayout>
