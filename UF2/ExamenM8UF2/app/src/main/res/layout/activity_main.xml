<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alumne.examenm8uf2.MainActivity">



    <VideoView
        android:id="@+id/videoView"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonAnarAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Reproduccio audio"
        android:layout_below="@+id/videoView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonAnarServeiWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servei Web"
        android:layout_alignBaseline="@+id/buttonAnarAudio"
        android:layout_alignBottom="@+id/buttonAnarAudio"
        android:layout_toEndOf="@+id/buttonAnarAudio"
        android:layout_marginStart="42dp" />

</RelativeLayout>
