<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonAudioR2D2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="72dp"
        android:text="Audio R2D2" />

    <Button
        android:id="@+id/buttonAudioChewaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonAudioR2D2"
        android:layout_marginEnd="75dp"
        android:text="Audio Chewaka" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonAudioR2D2"
        android:layout_below="@+id/buttonAudioR2D2"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="87dp"
        android:text="Play" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonPlay"
        android:layout_toEndOf="@+id/buttonPlay"
        android:text="Save" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSave"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/buttonSave"
        android:text="Reset" />
</RelativeLayout>