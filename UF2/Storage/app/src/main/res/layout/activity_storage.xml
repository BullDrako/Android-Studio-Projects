<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom" />

    <TextView
        android:id="@+id/tvNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuari" />

    <TextView
        android:id="@+id/tvUsuari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/bUsuari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuari" />

    <Button
        android:id="@+id/bGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest" />

    <Button
        android:id="@+id/bWriteInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Internal" />
    <Button
        android:id="@+id/bWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write External" />

</LinearLayout>
